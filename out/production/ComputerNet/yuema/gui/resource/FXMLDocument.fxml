                        <JFXTextField fx:id="userID" labelFloat="true" layoutX="85.0" layoutY="127.0" maxWidth="316.0" minWidth="233.0" prefHeight="31.0" prefWidth="316.0">
                           <font>
                              <Font name="Roboto Medium" size="14.0" />
                           </font>
                            <promptText>
                                username
                            </promptText>
                        </JFXTextField>

                        <JFXTextField fx:id="password" labelFloat="true" layoutX="85.0" layoutY="198.0" maxWidth="316.0" minWidth="235.0" prefHeight="31.0" prefWidth="316.0">
                           <font>
                              <Font name="Roboto Medium" size="14.0" />
                           </font>
                            <promptText>
                                password
                            </promptText>
                        </JFXTextField>




